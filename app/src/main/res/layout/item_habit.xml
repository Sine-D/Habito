<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/glass_card_background"
    app:cardBackgroundColor="@color/glass_white"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_view_habit_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Habit icon"
            android:src="@android:drawable/ic_menu_agenda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_habit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toStartOf="@id/button_mark_complete"
            app:layout_constraintStart_toEndOf="@id/image_view_habit_icon"
            app:layout_constraintTop_toTopOf="@id/image_view_habit_icon"
            tools:text="Drink Water" />

        <TextView
            android:id="@+id/text_view_habit_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="@id/text_view_habit_title"
            app:layout_constraintStart_toStartOf="@id/text_view_habit_title"
            app:layout_constraintTop_toBottomOf="@id/text_view_habit_title"
            tools:text="HEALTH" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_mark_complete"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_view_habit_icon" />

        <TextView
            android:id="@+id/text_view_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toStartOf="@id/text_view_time_of_day"
            app:layout_constraintStart_toStartOf="@id/image_view_habit_icon"
            app:layout_constraintTop_toBottomOf="@id/image_view_habit_icon"
            tools:text="3/8" />

        <TextView
            android:id="@+id/text_view_time_of_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_progress"
            tools:text="ANYTIME" />

        <ProgressBar
            android:id="@+id/progress_bar_habit"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/primary_purple"
            android:progressBackgroundTint="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/image_view_habit_icon"
            app:layout_constraintTop_toBottomOf="@id/text_view_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>